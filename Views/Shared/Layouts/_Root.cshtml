@using EPiServer.VisualBuilder

@model IPageViewModel<PageData>
@{
    var siteData = Model.CurrentPage is SitePageData ? (SitePageData)Model.CurrentPage : null;
    var isExperience = Model.CurrentPage is ExperienceData;
}

<!DOCTYPE html>
<html lang="@(Model.CurrentPage.Language)">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=10" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(siteData?.MetaTitle ?? Model.CurrentPage.Name)</title>
    @if (siteData?.MetaKeywords != null && siteData?.MetaKeywords.Count > 0)
    {
        <meta name="keywords" content="@string.Join(",", siteData?.MetaKeywords)" />
    }
    @if (!string.IsNullOrWhiteSpace(siteData?.MetaDescription))
    {
        <meta name="description" content="@siteData?.MetaDescription" />
    }
    @Html.CanonicalLink()
    @Html.AlternateLinks()
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/opti.min.css" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <required-client-resources area="Header" />
</head>

<body class="theme--dark">
    @if (Model.Layout.IsInReadonlyMode)
    {
        await Html.RenderPartialAsync("Readonly", Model);
    }

    @await Html.RenderEPiServerQuickNavigatorAsync()

    @Html.FullRefreshPropertiesMetaData()

    @if (!Model.Layout.HideHeader)
    {
        await Html.RenderPartialAsync("Header", Model);
    }

    @if (isExperience)
    {
        @RenderBody()
    } else
    {
        <div class="container">
            @RenderBody()
        </div>
    }

    @if (!Model.Layout.HideFooter)
    {
        await Html.RenderPartialAsync("Footer", Model);
    }
    <required-client-resources area="Footer" />
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
